# DoppelDown ML Configuration

# Model paths
ML_MODEL_PATH=ml/models
ML_DATA_PATH=ml/data

# API Configuration
ML_API_HOST=0.0.0.0
ML_API_PORT=8000
ML_API_KEY=

# Training Configuration
TRAIN_EPOCHS=100
TRAIN_BATCH_SIZE=32
TRAIN_LEARNING_RATE=0.001
TRAIN_VALIDATION_SPLIT=0.2

# Model Hyperparameters
AUTOENCODER_ENCODING_DIM=12
AUTOENCODER_HIDDEN_DIM=64
ISOLATION_FOREST_CONTAMINATION=0.3
ISOLATION_FOREST_ESTIMATORS=100

# Scoring Thresholds
RISK_THRESHOLD_LOW=0.3
RISK_THRESHOLD_MEDIUM=0.6
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_CRITICAL=0.95

# Feature Engineering
ENABLE_HOMOGLYPH_DETECTION=true
ENABLE_ENTROPY_FEATURES=true
ENABLE_SIMILARITY_METRICS=true

# Batch Processing
MAX_BATCH_SIZE=1000
BATCH_TIMEOUT_SECONDS=30
